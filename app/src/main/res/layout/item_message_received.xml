<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageFriend"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:background="@drawable/circle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8sp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textFriendName"
        android:text="@string/base_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/imageFriend"
        android:layout_marginLeft="8sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4sp" />

    <TextView
        android:id="@+id/textMessageBody"
        android:text="@string/sample_message"
        android:background="@drawable/rounded_rectangle_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240sp"
        android:padding="8sp"
        android:textColor="#ffffff"
        android:layout_marginTop="4sp"
        app:layout_constraintTop_toBottomOf="@+id/textFriendName"
        app:layout_constraintLeft_toRightOf="@+id/imageFriend"
        android:layout_marginLeft="8sp" />

    <TextView
        android:id="@+id/textMessageTime"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/textMessageBody"
        android:layout_marginLeft="4sp"
        app:layout_constraintBottom_toBottomOf="@+id/textMessageBody" />

</androidx.constraintlayout.widget.ConstraintLayout>